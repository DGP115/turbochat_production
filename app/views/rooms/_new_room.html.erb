<%= form_with(model: @room, remote: true, class: 'd-flex',
          data: { controller: 'reset-form', action: 'turbo:submit-end->reset-form#reset'}) do |f| %>
  <%= f.text_field :name, class: 'form-control new-room-input', autocomplete: 'off',
                          placeholder: 'Create a new room' %>
  <%= f.submit data: { turbo: "false" }, class: "btn btn-success new-rooom-button" %>
<% end %>
